<html>
    <head>
        <title>Index of /{{ root ~ ("/" * root|length) }}</title></head>
    <body>
        <h1>Index of /{{ root ~ ("/" * root|length) }}</h1>
        <hr/>
        <pre>
<a {% if root %}href="../"{% endif %}><u>../</u></a>{% for dir in dirs %}
<a href="{{ dir.name }}/">{{ (dir.name|truncate(50, True, '..>', 0)) ~ ("/" * (dir.name|length < 50)) }}</a>{{ " " * [1, 50 - dir.name|length]|max }}{{
                    dir.mtime.strftime("%d-%b-%Y %H:%M") }} {{ "%19s" % "-" }}{% endfor %}{% for file in files %}
<a href="{{ file.name }}">{{ file.name|truncate(50, True, '..>', 0) }}</a>{{ " " * [0, 50 - file.name|length]|max }} {{
                    file.mtime.strftime("%d-%b-%Y %H:%M") }} {{ "%19s" % file.size }}{% endfor %}
</pre>
        <hr/>
    </body>
</html>
